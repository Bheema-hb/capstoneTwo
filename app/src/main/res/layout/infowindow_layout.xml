<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marker_layout"
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:background="@drawable/marker_info_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:background="@drawable/marker_info_bg"
        android:padding="0.5dp">

        <LinearLayout
            android:id="@+id/price_info_layout"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/start_park_price_info"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/parking_price"
                style="@style/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/per_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:text="@string/per_hour"
                android:textColor="#ffcebe"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/price_info_layout"
            android:background="@color/dialog_header_background"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/parking_area"
                style="@style/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Park Name"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/available_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="15 slots available near dairy circle"
                android:textColor="#a9aab9"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>